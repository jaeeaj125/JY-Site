<% layout('/layouts/boilerplate') %>
    <form action="/projects/<%= project._id%>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Project Name</label>
            <input type="text" id="name" name="project[name]" value="<%=project.name%>" class="form-control" autofocus
                required>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Work Title</label>
            <input type="text" id="title" name="project[title]" value="<%=project.title%>" class="form-control"
                required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="project[description]" id="description" cols="30" rows="10" class="form-control"
                required><%=project.description%></textarea>
        </div>

        <button class="btn btn-sucess">Update</button>
    </form>
    <a href="/projects/<%= project._id%>" class="btn btn-danger my-3">Cancel</a>